# Rust E2E 测试镜像 - 模拟真实 VPS 环境
FROM rust:1.75-slim-bookworm AS builder

WORKDIR /build

# 安装构建依赖
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制源代码
COPY . .

# 构建 release 版本
RUN cargo build --release

# 运行时镜像
FROM debian:bookworm-slim

# 安装运行时依赖和系统工具
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    wget \
    procps \
    bash \
    coreutils \
    iproute2 \
    net-tools \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# 设置时区
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /build/target/release/vps-tg-bot /app/vps-tg-bot

# 创建模拟的维护脚本
RUN mkdir -p /usr/local/bin

# 核心维护脚本
RUN echo '#!/bin/bash\n\
echo "=== VPS Core Maintenance (Rust) ==="\n\
echo "Date: $(date)"\n\
echo "Updating system packages..."\n\
sleep 1\n\
echo "Packages updated: 5"\n\
echo "System cleaned"\n\
echo "=== Maintenance Complete ===" ' > /usr/local/bin/vps-maintain-core.sh && \
    chmod +x /usr/local/bin/vps-maintain-core.sh

# 规则维护脚本
RUN echo '#!/bin/bash\n\
echo "=== VPS Rules Update (Rust) ==="\n\
echo "Date: $(date)"\n\
echo "Downloading new rules..."\n\
sleep 1\n\
echo "Rules updated: 150 new entries"\n\
echo "=== Rules Update Complete ===" ' > /usr/local/bin/vps-maintain-rules.sh && \
    chmod +x /usr/local/bin/vps-maintain-rules.sh

# 模拟 Xray 服务
RUN echo '#!/bin/bash\n\
case "$1" in\n\
    "restart")\n\
        echo "Xray restarted successfully"\n\
        ;;\n\
    "status")\n\
        echo "Xray is running"\n\
        ;;\n\
    "update")\n\
        echo "Xray updated to v1.8.0"\n\
        ;;\n\
    *)\n\
        echo "Usage: x-ui {restart|status|update}"\n\
        ;;\n\
esac ' > /usr/local/bin/x-ui && \
    chmod +x /usr/local/bin/x-ui

# 模拟 Sing-box 服务
RUN echo '#!/bin/bash\n\
case "$1" in\n\
    "restart")\n\
        echo "Sing-box restarted successfully"\n\
        ;;\n\
    "status")\n\
        echo "Sing-box is running"\n\
        ;;\n\
    "update")\n\
        echo "Sing-box updated to v1.5.0"\n\
        ;;\n\
    *)\n\
        echo "Usage: sb {restart|status|update}"\n\
        ;;\n\
esac ' > /usr/local/bin/sb && \
    chmod +x /usr/local/bin/sb

# 环境变量
ENV TELOXIDE_TOKEN=""
ENV CHAT_ID=""
ENV RUST_LOG=info

# 设置权限
RUN chmod +x /app/vps-tg-bot

ENTRYPOINT ["/app/vps-tg-bot"]
